<div class="restaurant">
    <h3>{{restaurant.name}}</h3>
    <img
        src="{{restaurant.imagelink}}"
        alt="{{restaurant.name}}"
        style="width:100%;height:100%;"
    />
</div>
<div class="promo-blocks">
  {{#if menus.length }}
    {{#each menus }}
      {{> menuItem this }}
    {{/each}}
  {{else}}
    <p>No menus</p>
  {{/if}}
</div>
<p>
  <a href='/restaurants/{{restaurant.id}}/new'>Add a Menu</a>
</p>